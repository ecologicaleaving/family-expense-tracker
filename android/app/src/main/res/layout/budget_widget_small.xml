<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background"
    android:clickable="true"
    android:focusable="true">

    <!-- Month label -->
    <TextView
        android:id="@+id/month_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dic 2024"
        android:textSize="12sp"
        android:textColor="@color/widget_text_secondary"
        android:fontFamily="sans-serif-medium" />

    <!-- Budget amounts (compact) -->
    <TextView
        android:id="@+id/budget_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="€450 / €800"
        android:textSize="18sp"
        android:textColor="@color/widget_text_primary"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="4dp" />

    <!-- Percentage -->
    <TextView
        android:id="@+id/percentage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="56%"
        android:textSize="14sp"
        android:textColor="@color/widget_text_secondary"
        android:layout_marginTop="2dp" />

    <!-- Progress bar (compact) -->
    <ProgressBar
        android:id="@+id/budget_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="6dp"
        android:progress="56"
        android:max="100"
        android:progressTint="@color/widget_progress_normal"
        android:progressBackgroundTint="@color/widget_progress_background" />

    <!-- Quick action icons (compact) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/scan_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_scan"
            android:tint="@color/widget_button_icon"
            android:padding="4dp"
            android:background="@drawable/widget_button_background"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/scan_receipt"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/manual_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_add"
            android:tint="@color/widget_button_icon"
            android:padding="4dp"
            android:background="@drawable/widget_button_background"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/add_expense"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
