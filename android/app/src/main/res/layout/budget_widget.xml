<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/widget_padding"
    android:background="@drawable/widget_background">

    <!-- Budget Display Container (Clickable) -->
    <LinearLayout
        android:id="@+id/budget_display_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground">

        <!-- Month Label -->
        <TextView
            android:id="@+id/month_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dicembre 2024"
            android:textSize="@dimen/widget_text_small"
            android:textColor="@color/widget_text_secondary"
            android:fontFamily="sans-serif-medium" />

        <!-- Expense Total and Count Display (Feature 001) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp">

            <!-- Total Amount -->
            <TextView
                android:id="@+id/total_amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="€342,50"
                android:textSize="@dimen/widget_text_large"
                android:textColor="@color/widget_text_primary"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Separator -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" • "
                android:textSize="@dimen/widget_text_medium"
                android:textColor="@color/widget_text_secondary"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <!-- Expense Count -->
            <TextView
                android:id="@+id/expense_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 spese"
                android:textSize="@dimen/widget_text_medium"
                android:textColor="@color/widget_text_secondary"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Error Indicator (Feature 001) -->
            <ImageView
                android:id="@+id/error_indicator"
                android:layout_width="@dimen/widget_icon_size_small"
                android:layout_height="@dimen/widget_icon_size_small"
                android:src="@drawable/ic_error_indicator"
                android:tint="@color/widget_error"
                android:visibility="gone"
                android:contentDescription="@string/error_loading_data"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Quick Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/widget_button_margin_top"
        android:gravity="center">

        <!-- Scan Button -->
        <LinearLayout
            android:id="@+id/scan_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/widget_button_padding"
            android:background="@drawable/widget_button_background"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="@dimen/widget_button_spacing">

            <ImageView
                android:layout_width="@dimen/widget_icon_size"
                android:layout_height="@dimen/widget_icon_size"
                android:src="@drawable/ic_scan"
                android:tint="@color/widget_button_icon"
                android:contentDescription="@string/scan_receipt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scan"
                android:textSize="@dimen/widget_button_text"
                android:textColor="@color/widget_button_text"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Manual Entry Button -->
        <LinearLayout
            android:id="@+id/manual_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/widget_button_padding"
            android:background="@drawable/widget_button_background"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="@dimen/widget_button_spacing">

            <ImageView
                android:layout_width="@dimen/widget_icon_size"
                android:layout_height="@dimen/widget_icon_size"
                android:src="@drawable/ic_add"
                android:tint="@color/widget_button_icon"
                android:contentDescription="@string/add_expense" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manual"
                android:textSize="@dimen/widget_button_text"
                android:textColor="@color/widget_button_text"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:layout_marginStart="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Last Updated Timestamp -->
    <TextView
        android:id="@+id/last_updated_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aggiornato ora"
        android:textSize="@dimen/widget_text_tiny"
        android:textColor="@color/widget_text_tertiary"
        android:layout_gravity="end"
        android:maxLines="1"
        android:layout_marginTop="4dp" />
</LinearLayout>
