<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/widget_padding"
    android:background="@drawable/widget_background">

    <!-- Budget Display Container (Clickable) -->
    <LinearLayout
        android:id="@+id/budget_display_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground">

        <!-- Month Label -->
        <TextView
            android:id="@+id/month_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dicembre 2024"
            android:textSize="12sp"
            android:textColor="@color/widget_text_secondary"
            android:fontFamily="sans-serif" />

        <!-- Group/Personal/Total Expense Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="2dp">

            <!-- Group Expenses -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="2dp">

                <TextView
                    android:id="@+id/group_amount_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gruppo: €0,00"
                    android:textSize="13sp"
                    android:textColor="@color/widget_text_primary"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Error Indicator -->
                <ImageView
                    android:id="@+id/error_indicator"
                    android:layout_width="@dimen/widget_icon_size_small"
                    android:layout_height="@dimen/widget_icon_size_small"
                    android:src="@drawable/ic_error_indicator"
                    android:tint="@color/widget_error"
                    android:visibility="gone"
                    android:contentDescription="@string/error_loading_data"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Personal Expenses -->
            <TextView
                android:id="@+id/personal_amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personali: €0,00"
                android:textSize="13sp"
                android:textColor="@color/widget_text_primary"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="2dp" />

            <!-- Total Amount and Count -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/total_amount_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Totale: €0,00"
                    android:textSize="14sp"
                    android:textColor="@color/widget_text_primary"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Separator -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:textSize="13sp"
                    android:textColor="@color/widget_text_secondary"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp" />

                <!-- Expense Count -->
                <TextView
                    android:id="@+id/expense_count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 spese"
                    android:textSize="13sp"
                    android:textColor="@color/widget_text_secondary"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Quick Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/widget_button_margin_top"
        android:gravity="center">

        <!-- Scan Button -->
        <LinearLayout
            android:id="@+id/scan_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/widget_button_padding"
            android:background="@drawable/widget_button_background"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="@dimen/widget_button_spacing">

            <ImageView
                android:layout_width="@dimen/widget_icon_size"
                android:layout_height="@dimen/widget_icon_size"
                android:src="@drawable/ic_scan"
                android:tint="@color/widget_button_icon"
                android:contentDescription="@string/scan_receipt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scan"
                android:textSize="12sp"
                android:textColor="@color/widget_button_text"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Manual Entry Button -->
        <LinearLayout
            android:id="@+id/manual_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/widget_button_padding"
            android:background="@drawable/widget_button_background"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="@dimen/widget_button_spacing">

            <ImageView
                android:layout_width="@dimen/widget_icon_size"
                android:layout_height="@dimen/widget_icon_size"
                android:src="@drawable/ic_add"
                android:tint="@color/widget_button_icon"
                android:contentDescription="@string/add_expense" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manual"
                android:textSize="12sp"
                android:textColor="@color/widget_button_text"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:layout_marginStart="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Last Updated Timestamp -->
    <TextView
        android:id="@+id/last_updated_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aggiornato ora"
        android:textSize="10sp"
        android:textColor="@color/widget_text_tertiary"
        android:fontFamily="sans-serif"
        android:layout_gravity="end"
        android:maxLines="1"
        android:layout_marginTop="4dp" />
</LinearLayout>
